<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
  <definition name="layout" template="/WEB-INF/views/layout.jsp">
    <put-attribute name="header" value="" />
    <put-attribute name="content" value="" />
    <put-attribute name="footer" value="/WEB-INF/views/global/footer.jsp" />
  </definition>
   <!--관리자용-->
      <definition name ="adminlayout" template="/WEB-INF/views/layout.jsp">
             <put-attribute name="header" value="" />
             <put-attribute name="content" value="" />
             <put-attribute name="footer" value="/WEB-INF/views/home/bottom.jsp" />
      </definition >
      <!-- *****************************************
      상속을 이용하여 header,footer 를 자동으로 조합
      **********************************************
       -->
      <definition name ="*/*.tiles" extends="layout">
             <put-attribute name ="header" value= "/WEB-INF/views/global/header.jsp" />
             <put-attribute name ="content" value= "/WEB-INF/views/{1}/{2}.jsp" />
      </definition >
     
      
      
      <!-- *****************************************
      no  tiles 타일즈 미 적용
      **********************************************
       -->
      <definition name="noTiles" template="/WEB-INF/views/noTiles.jsp">
<put-attribute name="noTiles" value=""/>
</definition>  
<definition name="*.jsp" extends ="noTiles">
<put-attribute name="noTiles1" value="/WEB-INF/views/{1}.jsp"/>
</definition>  
<definition name="*/*.jsp" extends ="noTiles">
<put-attribute name="noTiles2" value="/WEB-INF/views/{1}/{2}.jsp"/>
</definition>  
<definition name="*/*/*.jsp" extends ="noTiles">
<put-attribute name="noTiles3" value="/WEB-INF/views/{1}/{2}/{3}.jsp"/>
</definition>  
</tiles-definitions>
